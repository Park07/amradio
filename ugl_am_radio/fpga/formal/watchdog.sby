[tasks]
bmc      # Bounded Model Checking - find bugs up to N cycles
prove    # Induction proof - prove for ALL cycles
cover    # Generate example waveforms

[options]
bmc:   mode bmc
bmc:   depth 60

prove: mode prove
prove: depth 60

cover: mode cover
cover: depth 60

[engines]
smtbmc z3

[script]
read -formal watchdog_formal.v
prep -top watchdog_timer

[files]
watchdog_formal.v
