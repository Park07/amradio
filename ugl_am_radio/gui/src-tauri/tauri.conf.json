{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "UGL AM Radio Control",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://127.0.0.1:8000/*", "http://localhost:8000/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "icon": [],
      "identifier": "com.ugl.radio-control",
      "targets": "all",
      "resources": []
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:8000 http://localhost:8000; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "width": 1200,
        "minHeight": 700,
        "minWidth": 1000,
        "resizable": true,
        "title": "UGL AM Radio Control",
        "center": true
      }
    ]
  }
}
